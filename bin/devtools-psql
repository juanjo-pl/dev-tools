#!/bin/bash

set -u 

. $(dirname "$0")/inc/env-values.sh 
. $(dirname "$0")/inc/functions.sh 

export command_name=`basename $0` 

function main() {
    check_require_argument "$@"
    
    export PGPASSWORD=$PGPASSWORD && \
    psql --host=$1 --port=$PGPORT --username=$PGUSER --dbname=$2
}


################################################################################
# Help                                                                         #
################################################################################
USAGE_HELP="Usage: $command_name [host] [dbname]"

DETAILED_HELP="
NAME
    $command_name

SYNOPSIS
    $command_name 

DESCRIPTION

    Starts psql

    Syntax: $command_name [host] [dbname]

    Options:
        -h       print usage
        --help   Print this help

"


# call to main execution
main "$@"
